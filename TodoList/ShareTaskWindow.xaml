<Window x:Class="GUI.ShareTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="ShareTaskWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="UsersComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="20,20,0,0" DisplayMemberPath="FullName"/>
        <Button x:Name="ShareButton" Content="Share" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="20,60,0,0" Click="ShareButton_Click"/>
    </Grid>
</Window>
